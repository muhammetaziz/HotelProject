@model HotelWebUI.Dtos.AboutDtos.CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form asp-action="CreateAbout" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="AboutDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Resim 1</label>
        <input type="file" asp-for="ImageFile1" class="form-control" />
    </div>

    <div class="form-group">
        <label>Resim 2</label>
        <input type="file" asp-for="ImageFile2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Resim 3</label>
        <input type="file" asp-for="ImageFile3" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
