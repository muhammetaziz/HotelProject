@model List<HotelWebUI.Dtos.CommentDtos.ResultCommentDto>

<section class="testimonial-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Yorumlar</span>
                    <h2>Misafirlerimiz ne diyor?</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="testimonial-slider owl-carousel">
                    @foreach (var item in Model)
                    {

                    <div class="ts-item">
                        <p>cdsds
                            @item.CommentMessage       
                        </p>
                        <div class="ti-author">
                            <div class="rating">
                                @for (int i = 0; i < item.RatingRange; i++)
                                {
                                    <i class="icon_star"></i>
                                }
                            </div>
                            <h5> - @item.CommentName</h5>
                        </div>
                        <img src="img/testimonial-logo.png" alt="">
                    </div>
                    }
                     
                </div>
            </div>
        </div>
    </div>
</section>

 