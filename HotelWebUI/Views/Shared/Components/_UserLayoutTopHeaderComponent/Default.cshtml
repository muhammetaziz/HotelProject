@model HotelWebUI.Dtos.CommanDtos.ContactSocialMediDto

@if (Model?.ContactValues?.Any() == true && Model?.SocialValues?.Any() == true)
{
    var contact = Model.ContactValues.First();
    var social = Model.SocialValues.First();
    <header class="header-section header-normal">
        <div class="top-nav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="tn-left">
                            <li><i class="fa fa-phone"></i> @contact.ContactNumber</li>
                            <li><i class="fa fa-envelope"></i> @contact.ContactEmail</li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="tn-right">
                            <div class="top-social">
                                <a href="@social.Facebook"><i class="fa fa-facebook"></i></a>
                                <a href="@social.Twitter"><i class="fa fa-twitter"></i></a>
                                <a href="@social.Instagram"><i class="fa fa-instagram"></i></a>
                                <a href="@social.Instagram"><i class="fa fa-tripadvisor"></i></a>
                            </div>
                            <a href="#" class="bk-btn">Hemen Rezerve Et</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-item">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a href="./index.html">
                                <img src="img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="nav-menu">
                            <nav class="mainmenu">
                                <ul>
                                    <li><a href="./index.html">Ana Sayfa</a></li>
                                    <li><a href="./rooms.html">Odalar</a></li>
                                    <li><a href="./about-us.html">Hakkımızda</a></li> 
                                    <li><a href="./blog.html">Galeri</a></li>
                                    <li class="active"><a href="./contact.html">İletişim</a></li>
                                </ul>
                            </nav> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
}