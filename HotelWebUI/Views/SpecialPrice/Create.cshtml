@model HotelWebUI.Dtos.SpecialPriceDtos.SpecialPriceDto

@{
    ViewData["Title"] = "Yeni Özel Fiyat";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2>Yeni Özel Fiyat Ekle</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label>Oda Tipi</label>
            <select asp-for="RoomTypeId" asp-items="ViewBag.RoomTypes" class="form-control"></select>
        </div>
        <div class="mb-3">
            <label>Özel Fiyat</label>
            <input asp-for="SpecialPrice" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Başlangıç Tarihi</label>
            <input asp-for="StartDate" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Bitiş Tarihi</label>
            <input asp-for="EndDate" type="date" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>
